# ================================
# CONFIGURAÇÕES DO SERVIDOR
# ================================
NODE_ENV=development
PORT=4000

# ================================
# DATABASE
# ================================
# Formato: postgresql://USER:PASSWORD@HOST:PORT/DATABASE
DATABASE_URL="postgresql://nsr_dev:dev_password_change_in_prod@localhost:5432/nsr_development"

# ================================
# JWT (Autenticação)
# ================================
# Gere com: node -e "console.log(require('crypto').randomBytes(64).toString('hex'))"
JWT_SECRET=your-super-secret-jwt-key-change-this-in-production
JWT_REFRESH_SECRET=your-super-secret-refresh-key-change-this-in-production
JWT_EXPIRES_IN=15m
JWT_REFRESH_EXPIRES_IN=7d

# ================================
# CLOUDINARY (Upload de Imagens)
# ================================
# Obtenha em: https://cloudinary.com/console
CLOUDINARY_CLOUD_NAME=your-cloud-name
CLOUDINARY_API_KEY=your-api-key
CLOUDINARY_API_SECRET=your-api-secret
CLOUDINARY_URL=cloudinary://api_key:api_secret@cloud_name

# ================================
# EMAIL (Nodemailer)
# ================================
# Gmail: Ative "App Passwords" em https://myaccount.google.com/apppasswords
EMAIL_HOST=smtp.gmail.com
EMAIL_PORT=587
EMAIL_SECURE=false
EMAIL_USER=seu-email@gmail.com
EMAIL_PASSWORD=sua-senha-de-app
EMAIL_FROM="NSR E-commerce <noreply@nsr.com>"

# ================================
# CORS
# ================================
# URLs permitidas (separadas por vírgula)
CORS_ORIGIN=http://localhost:3000,http://localhost:3001

# ================================
# RATE LIMITING
# ================================
# Máximo de requisições por minuto
RATE_LIMIT_WINDOW_MS=60000
RATE_LIMIT_MAX_REQUESTS=100

# ================================
# FRONTEND URL
# ================================
FRONTEND_URL=http://localhost:3000

# ================================
# OUTROS
# ================================
# Ativar logs detalhados
DEBUG=true

# Seed do banco (true na primeira execução)
SEED_DATABASE=false
